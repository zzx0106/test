.page {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.page .navigation {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding-top: 40rpx;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 128rpx;
  background: #F2F2F2;
  border-bottom: 1px solid #DADADA;
}

.page .navigation .back-bn {
  position: absolute;
  left: 20rpx;
  bottom: 0rpx;
  height: 77rpx;
  padding: 0 10rpx;
  vertical-align: middle;
}

.page .navigation .back-bn image {
  width: 20rpx;
  height: 32rpx;
}

.page .navigation text {
  font-size: 36rpx;
  font-weight: bold;
}

.page .list-group {
  border-radius: 12rpx;
  padding: 18rpx;
  margin: 24rpx;
}

.page .list-group .list {
  margin-bottom: 30rpx;
}

.page .list-group .list .question {
  line-height: 48rpx;
  font-weight: bold;
  font-size: 26rpx;
}

.page .list-group .list .answer {
  font-size: 24rpx;
  line-height: 36rpx;
}
