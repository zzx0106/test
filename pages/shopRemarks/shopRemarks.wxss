page {
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow-y: scroll;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
  background: #fff;
}

.page .shop-car-remarks-body {
  margin: 32rpx 24rpx 60rpx 24rpx;
  min-height: 140rpx;
}

.page .shop-car-remarks-body .say-something {
  position: relative;
  margin-bottom: 60rpx;
  background: #fafafa;
}

.page .shop-car-remarks-body .count {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  color: #b3b3b3;
  font-size: 26rpx;
}

.page .shop-car-remarks-body .noData {
  color: #b3b3b3;
  font-size: 26rpx;
}

.page .shop-car-remarks-body .sub-bn {
  width: 160rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  border: 1rpx solid #EAEAEA;
  color: #b3b3b3;
  border-radius: 8rpx;
}

.page .shop-car-remarks-body .sub-bn.isBlack {
  border: 1rpx solid #ff5e2c;
  color: #ff5e2c;
}

.page .say {
  width: 100%;
  height: 350rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #3e3e3e;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  outline: none;
  word-break: break-all;
  border-radius: 10rpx;
}

.loading {
  padding: 10rpx;
  text-align: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  -webkit-animation: rotate 1s linear infinite;
  animation: rotate 1s linear infinite;
}

.version-yellow .page .card .title .c-success {
  color: #ffd21e;
}
