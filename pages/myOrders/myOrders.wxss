page {
  height: 100%;
}

.page {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow-y: scroll;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
}

.page .nav {
  width: 100%;
  z-index: 100;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: fixed;
}

.page .nav .wrap-center {
  width: 300rpx;
  margin: 0 auto;
}

.page .nav .wrap-center .menu.c-active {
  color: #f3507e;
  position: relative;
}

.page .nav .wrap-center .menu.c-active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  width: 60%;
  height: 4rpx;
  background: #f3507e;
}

.page .class-page-box {
  width: auto;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow: hidden;
}

.page .class-page-box .class-page {
  height: 100%;
}

.page .wrap-content {
  position: relative;
  padding: 24rpx;
}

.page .net-error {
  width: 600rpx;
  height: 600rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 26rpx;
}

.page .net-error image {
  width: 228rpx;
  height: 228rpx;
}

.page .net-error view {
  margin-top: 60rpx;
}

.page .net-error .bn {
  width: 150rpx;
  height: 50rpx;
  border: 1rpx solid #919191;
  color: #414141;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin: 46rpx auto;
  line-height: 50rpx;
}

.page .card {
  border-radius: 12rpx;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.page .card .title {
  height: 76rpx;
  font-size: 26rpx;
  color: #414141;
  position: relative;
  padding-left: 46rpx;
}

.page .card .title .shopName {
  font-family: 'PingFang-SC-Medium';
}

.page .card .title .head-img {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #dfdfdf;
  position: absolute;
  top: 50%;
  left: 20rpx;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.page .card .title .head-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.page .card .title .lh-38 {
  height: 76rpx;
  line-height: 76rpx;
}

.page .card .c-success {
  color: #f3507e;
}

.page .card .c-reback {
  color: #e93c3a;
}

.page .card .proDetail {
  font-size: 26rpx;
  color: #262626;
  padding: 20rpx 0;
}

.page .card .proDetail .goods-img {
  width: 180rpx;
  height: 180rpx;
}

.page .card .proDetail .goods-img image {
  width: 100%;
  height: 100%;
  border: 1rpx solid #f5f5f5;
  border-radius: 6rpx;
}

.page .card .proDetail .goodsName {
  position: relative;
}

.page .card .proDetail .goodsName text {
  position: absolute;
  top: 50%;
  left: 20rpx;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  transform: translate(0, -50%);
}

.page .card .chargeDes {
  line-height: 32rpx;
  padding-bottom: 24rpx;
}

.page .card .chargeDes .time {
  color: #b2b2b2;
}

.page .card .chargeDes .c-charge {
  color: #e93c3a;
}

.page .card .chargeDes .fs-14 {
  font-size: 28rpx;
}

.page .card .chargeDes .fs-16 {
  font-size: 32rpx;
}

.page .card .wrap-btn {
  text-align: right;
  padding: 20rpx 0;
}

.page .card .wrap-btn .bn {
  height: 50rpx;
  background: transparent;
  border: 1rpx solid #919191;
  font-size: 26rpx;
  color: #414141;
  border-radius: 8rpx;
  line-height: 50rpx;
  padding: 0 13rpx 0;
}

.loading {
  padding: 10rpx;
  text-align: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  -webkit-animation: rotate 1s linear infinite;
  animation: rotate 1s linear infinite;
}

.version-yellow .page .card .title .c-success {
  color: #ffd21e;
}
